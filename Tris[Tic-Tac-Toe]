# -*- coding: cp1252 -*-
import random
tab=["-","-","-","-","-","-","-","-","-"]
def MioT():
    while True:
        p=input("Dove vuoi mettere il tuo segno??\n\r1-2-3\n\r4-5-6\n\r7-8-9\n\r")
        if tab[p-1]=="-":
            tab[p-1]="X"
            print "###########\n\r"+tab[0]+tab[1]+tab[2]+"\n\r"+tab[3]+tab[4]+tab[5]+"\n\r"+tab[6]+tab[7]+tab[8]
            Con()
            TuoT()
        else:
            print "La casella Ã¨ gia occupata"
def TuoT():
    while True:
        p=random.randint(1,9)
        if tab[p-1]=="-":
            tab[p-1]="O"
            print "###########\n\r"+tab[0]+tab[1]+tab[2]+"\n\r"+tab[3]+tab[4]+tab[5]+"\n\r"+tab[6]+tab[7]+tab[8]
            Con()
            MioT()
